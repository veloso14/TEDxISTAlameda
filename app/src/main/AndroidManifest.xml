<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fct.TEDxISTAlameda">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity android:name="com.fct.TEDxISTAlameda.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name="com.fct.TEDxISTAlameda.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>



        <activity
            android:name="com.fct.TEDxISTAlameda.activity.IconTabsActivity"
            android:label="@string/title_activity_icon_tabs"
            android:parentActivityName="com.fct.TEDxISTAlameda.activity.MainActivity" >
        </activity>



        <activity
            android:name="com.fct.TEDxISTAlameda.Register"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name="com.fct.TEDxISTAlameda.IntroActivity">
        </activity>


        <activity
            android:name="com.fct.TEDxISTAlameda.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name="com.fct.TEDxISTAlameda.UserProfile"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
